{
  "name": "paperless-scanner",
  "version": "1.0.0",
  "description": "Desktop application for scanning documents and uploading to Paperless-ngx",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "test": "jest"
  },
  "keywords": [
    "paperless",
    "scanner",
    "document-management"
  ],
  "author": "",
  "license": "GPL-3.0",
  "dependencies": {
    "@google/generative-ai": "^0.1.0",
    "axios": "^1.6.0",
    "edge-js": "^20.0.0",
    "electron": "^34.0.0",
    "electron-edge-js": "^39.0.1",
    "js-yaml": "^4.1.0",
    "openai": "^4.20.0",
    "sharp": "^0.33.0"
  },
  "devDependencies": {
    "electron-builder": "^24.9.0",
    "jest": "^29.7.0"
  },
  "build": {
    "appId": "com.paperlessscanner.app",
    "productName": "Paperless Scanner",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png"
    }
  }
}
